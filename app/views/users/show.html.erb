<div class="row">
    <div class="col-md-3 text-center">
     <%= image_tag @user.profile.avatar.url(:thumb), class: 'user-profile-pic' %>
    </div>
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><span class="job_title_icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
      <div class="well profile-block profile-description">
       <h3>Background</h3>   
       <%= @user.profile.description %>
      </div>
      
      <% if current_user.plan_id == 2 %>
      <div class="well profile-block contact-info">
        <h3>Contact:</h3>  
        <%= @user.profile.phone_number %><br/>
        <%= @user.profile.contact_email %><br/>
      </div> 
      <% end %>
      
      <% if current_user.plan_id == 1 %>
      <div class="well profile-block contact-info">
         <p>Whant to see more information? Get the most from your account today. Become a Pro user and build upon your reputation.</p> 
       <%= link_to "upgrade Pro", upgrade_users_path(plan_id: 2), data: { confirm: "Congratulations on becomeing PRO! Your credit card on file will be charged. Thank you!" },  class: 'btn btn-primary' %>
        
      <% end %>
    </div>
</div>
<div class="row">
 <div class="col-md-6 col-md-offset-3">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
      </div>
    
      <div class="field form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control'   %>
      </div>
    
      <div class="actions form-group">
        <%= f.submit "Update", class: 'btn btn-warning' %>
      </div>
    <% end %>
    
    <% if current_user.plan_id == 1 %>
     
    <div class="well profile-block contact-info">
        <h3>Upgrade Account</h3>
        <p>Want to see more information? Get the most from your account today. Become a Pro user and build upon your reputation.</p> 
       <%= link_to "Upgrade Pro", upgrade_users_path(plan_id: 2), data: { confirm: "Congratulations on becomeing PRO! Your credit card on file will be charged. Thank you!" }, class: 'btn btn-success' %>
    </div>   
    <% end %> 
    
    <h3>Downgrade Account</h3>
    <%= link_to "Downgrade Basic", upgrade_users_path(plan_id: 1), data: { confirm: "Are you sure? You will be downgraded to basic and will not be able to communicate to members" }, class: 'btn btn-primary' %><br />
    
    <h3>Cancel My Account</h3>
    
    <p>Sorry to see you go. <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? Your account will no longer exist." }, method: :delete, class: 'btn btn-danger' %></p>
    
    <%= link_to "Back", :back %>
  </div>
</div>